{% extends '_layout.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}



{% block title %}
    Loire&Orléans | Trombinoscope
{% endblock %}


{% block body %}
    <section class="d-flex flex-column justify-content-center align-items-center">

        <h1 class="text-center my-4">Trombinoscope</h1>

        <div class="d-flex flex-column">
            <div class="d-flex justify-content-center my-4">
                <div class="form-group">
                    {% form_theme form 'bootstrap_4_layout.html.twig' %}
                    {{ form_start(form) }}
                    {{ form_row(form.search, {'label': " ", 'attr': {'placeholder': 'mot clé...'}}) }}
                    <button class="btn btn-primary">Rechercher</button>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="row p-0 m-0 justify-content-center">
                {% for user in users %}
                    <div class="card my-4 mx-5 col-md-3 col-lg-2 m-2 p-0">
                        <img class="card-img-top"
                             src="{{ vich_uploader_asset(user, 'pictureFile', 'App\\Entity\\User') }}"
                             alt="Photo Ambassadeur">
                        <div class="card-body">
                            <h6 class="card-title">Nom : {{ user.firstname }}</h6>
                            <h6 class="card-title">Prénom : {{ user.lastname }}</h6>
                            <p class="card-title">Entreprise : {{ user.company }}</p>
                        </div>
                        <a href="#" class="btn btn-info mt-2">Profil de {{ user.firstname }} {{ user.lastname }}</a>
                    </div>
                {% else %}
                    'Aucun Ambassadeur trouvé'
                {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-center w-100 my-5">
            {{ knp_pagination_render(users) }}
        </div>
    </section>



{% endblock %}
